<UserControl x:Class="Vts.Gui.Silverlight.View.MieScatteringView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="200" Height="190">
    <Grid  Background="White">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Mie scattering law:" />
            <TextBlock Text="n_rel = "/>
            <TextBox Text="{Binding n, Mode=TwoWay}" Width="50" KeyDown="TextBox_KeyDown"/>
            <TextBlock Text="scatt. radius = "/>
            <TextBox Text="{Binding radius, Mode=TwoWay}" Width="50" KeyDown="TextBox_KeyDown"/>
            <TextBlock Text="λ = "/>
            <TextBox Text="{Binding wavelength, Mode=TwoWay}" Width="50" KeyDown="TextBox_KeyDown"/>
          </StackPanel>
    </Grid>
</UserControl>
